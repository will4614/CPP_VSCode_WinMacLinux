{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "nmake",
                "args": ["/f","Makefile_windows"]
            },
            "linux": {
                "command": "make",
                "args": ["--file=Makefile_linux"],
            },
            "osx": {
                "command": "make",
                "args": ["--file=Makefile_linux"],
            },

            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ]
        }
    ]
}