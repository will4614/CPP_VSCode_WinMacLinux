{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "nmake",
                "args": [
                    "/f",
                    "Makefile_windows"
                ]
            },
            "linux": {
                "command": "make",
                "args": [
                    "--file=Makefile_linux"
                ]
            },
            "osx": {
                "command": "make",
                "args": [
                    "--file=Makefile_linux"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": "nmake",
                "args": [
                    "/f",
                    "Makefile_windows",
                    "clean"
                ]
            },
            "linux": {
                "command": "make",
                "args": [
                    "--file=Makefile_linux",
                    "clean"
                ]
            },
            "osx": {
                "command": "make",
                "args": [
                    "--file=Makefile_linux",
                    "clean"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ]
        },
        {
            "label": "runMe",
            "type": "shell",
            "windows": {
                "command": "nmake",
                "args": [
                    "/f",
                    "Makefile_windows",
                    "runMe"
                ]
            },
            "linux": {
                "command": "make",
                "args": [
                    "--file=Makefile_linux",
                    "runMe"
                ]
            },
            "osx": {
                "command": "make",
                "args": [
                    "--file=Makefile_linux",
                    "runMe"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ]
        }
    ]
}