# Sample makefile

all: bin bin/helloWorld.exe

bin:
	mkdir bin

# possible command line options
bin/helloWorld.exe:  bin src/*.cpp include/*.h
	cl.exe /Z7 /nologo  /Iinclude /EHsc /DEBUG /MTd src/*.cpp  /Fo:bin\ /Fe:bin\helloWorld.exe

runMe: bin/helloWorld.exe
	bin/helloWorld.exe
	
clean:
	del  /Q   bin\*.exe bin\*.ilk bin\*.pdb bin\*.obj
